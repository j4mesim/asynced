{
  "compilerOptions": {
    // --- Type Safety & Strictness 
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "verbatimModuleSyntax": true,

    // --- Module & Environment Settings ---
    "lib": ["ESNext", "DOM"],
    "target": "ES2022",
    "moduleResolution": "bundler",

    // --- Library Publishing Essentials ---
    "declaration": true, // Create .d.ts files
    "declarationMap": true, // Create sourcemaps for .d.ts files
    "sourceMap": true, // Create .js.map files for debugging
    "skipLibCheck": true,

    // --- Project Structure ---
    // "outDir" will be set in specific configs (esm/cjs)
    "allowJs": true
  },

  // Define what files to include in the compilation
  "include": ["src"],
  // You might want to exclude test files, etc., from the main build
  "exclude": ["node_modules", "dist", "**/*.test.ts","**/*.spec.ts"]
}